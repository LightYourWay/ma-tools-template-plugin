{
	"compilerOptions": {
		"rootDir": "src",
		"target": "esnext",
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["typescript-to-lua/language-extensions", "lua-types/5.3", "grandMA3-types", "gma-tools"],
		"strict": true
	},
	"tstl": {
		"luaTarget": "5.3",
		"noHeader": true,
		"luaBundle": "dist/ma-tools-template-plugin.lua",
		"luaBundleEntry": "src/ma-tools-template-plugin.ts",
		"noImplicitSelf": true,
		"luaPlugins": [{ "name": "grandMA3-tstl-plugin" }]
	}
}
